<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">
  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %-5p [%15.15t] %20.20logger{0}: %m%n%ex</pattern>
    </encoder>
  </appender>

  <logger name="javax.faces" level="INFO"/>
  <logger name="com.sun.faces" level="INFO"/>
  <logger name="javax.enterprise" level="INFO"/>
  <logger name="pt.ipb.jsf.demo" level="DEBUG"/>

  <root level="WARN">
    <appender-ref ref="stdout"/>
  </root>
</configuration>
